# Development Environment Variables
NODE_ENV=development

# API Configuration  //52246
VITE_API_URL=http://localhost:52246/api 
VITE_WS_URL=ws://localhost:52246/notificationHub
VITE_USE_MOCK_API=false

# Application Configuration
VITE_APP_NAME=Project Management Application
VITE_APP_VERSION=1.0.0

# Logging
VITE_ENABLE_CONSOLE_LOGS=true

# Realtime (SignalR)
# Set to true to enable SignalR realtime notifications, false to disable initializing the websocket connection
VITE_ENABLE_SIGNALR=true

# AI-Powered Form Suggestions
VITE_LLM_ENABLED=true

# Use n8n workflow (true) or direct Ollama (false)
VITE_LLM_USE_N8N=true

# n8n webhook URL (when USE_N8N=true)
VITE_LLM_N8N_WEBHOOK_URL=http://localhost:5678/webhook/ai-suggest-agent

#http://localhost:5678/webhook/ai-suggest-agent

# Direct Ollama config (when USE_N8N=false)
VITE_LLM_API_URL=http://localhost:11434
VITE_LLM_MODEL=mistral:7b-instruct

# File Upload Configuration
VITE_MAX_FILE_SIZE_MB=50
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,txt,jpg,jpeg,png,gif,bmp,zip,rar
