# Project Management Application Environment Variables
# Copy this file to .env.local for development or .env.production for production

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
NODE_ENV=development

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Base URL for the REST API backend
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Whether to use mock API for development (true/false)
NEXT_PUBLIC_USE_MOCK_API=true

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NEXT_PUBLIC_APP_NAME=Project Management Application
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Military Project Management System

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# Authentication provider: local, jwt, oauth
NEXT_PUBLIC_AUTH_PROVIDER=local

# Session timeout in milliseconds (1 hour = 3600000)
NEXT_PUBLIC_AUTH_TIMEOUT=3600000

# JWT Secret (keep this secure in production!)
# AUTH_SECRET=your-super-secret-jwt-key-here

# JWT Issuer and Audience
# AUTH_ISSUER=pma-application
# AUTH_AUDIENCE=pma-users

# =============================================================================
# DATABASE CONFIGURATION (Backend)
# =============================================================================
# PostgreSQL connection string
# DATABASE_URL=postgresql://username:password@localhost:5432/pma_db

# Individual database settings
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=pma_db
# DATABASE_USER=pma_user
# DATABASE_PASSWORD=your-secure-password

# =============================================================================
# REDIS CONFIGURATION (Caching)
# =============================================================================
# Redis connection string
# REDIS_URL=redis://localhost:6379

# Individual Redis settings
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file size in bytes (10MB = 10485760)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# Allowed file extensions
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png,.gif

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: debug, info, warn, error
LOG_LEVEL=debug

# Enable console logs in browser (development only)
NEXT_PUBLIC_ENABLE_CONSOLE_LOGS=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_EXPORT=true
NEXT_PUBLIC_ENABLE_BULK_OPERATIONS=true

# =============================================================================
# LOCALIZATION SETTINGS
# =============================================================================
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_SUPPORTED_LANGUAGES=en,ar
NEXT_PUBLIC_FALLBACK_LANGUAGE=en

# =============================================================================
# THEME CONFIGURATION
# =============================================================================
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_THEME_PERSISTENCE=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# API request timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=10000

# Debounce delay for search inputs
NEXT_PUBLIC_DEBOUNCE_DELAY=300

# Pagination settings
NEXT_PUBLIC_PAGINATION_DEFAULT_LIMIT=20
NEXT_PUBLIC_PAGINATION_MAX_LIMIT=100

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Session timeout in milliseconds (30 minutes = 1800000)
NEXT_PUBLIC_SESSION_TIMEOUT=1800000

# Enable CSRF protection
NEXT_PUBLIC_CSRF_PROTECTION=true

# Rate limiting (requests per window)
NEXT_PUBLIC_RATE_LIMIT_REQUESTS=100
NEXT_PUBLIC_RATE_LIMIT_WINDOW=900000

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Email/SMTP Configuration
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@yourdomain.com
# SMTP_PASSWORD=your-smtp-password
# SMTP_FROM=PMA System <noreply@yourdomain.com>

# AWS S3 Configuration (for file storage)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=pma-documents

# Monitoring & Analytics
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable React Developer Tools and other debug tools
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# Mock API delay simulation (milliseconds)
NEXT_PUBLIC_MOCK_DELAY_MIN=200
NEXT_PUBLIC_MOCK_DELAY_MAX=800

# =============================================================================
# PRODUCTION SETTINGS (for .env.production)
# =============================================================================
# Remember to:
# 1. Set NODE_ENV=production
# 2. Update NEXT_PUBLIC_API_URL to your production API
# 3. Set NEXT_PUBLIC_USE_MOCK_API=false
# 4. Configure real database credentials
# 5. Set secure JWT secret
# 6. Enable HTTPS and proper CORS settings
# 7. Configure monitoring and logging
# 8. Set up backup strategies
# ============================================================================
