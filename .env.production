# Production Environment Configuration
NODE_ENV=production

# API Configuration - UPDATE THESE FOR PRODUCTION
NEXT_PUBLIC_API_URL=https://your-production-api.com/api
NEXT_PUBLIC_USE_MOCK_API=false

# Application Configuration
NEXT_PUBLIC_APP_NAME=Project Management Application
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Military Project Management System

# Authentication Configuration
NEXT_PUBLIC_AUTH_PROVIDER=jwt
NEXT_PUBLIC_AUTH_TIMEOUT=3600000
AUTH_SECRET=your-super-secure-production-jwt-key-change-this
AUTH_ISSUER=pma-production
AUTH_AUDIENCE=pma-users

# Database Configuration
DATABASE_URL=postgresql://username:password@your-db-host:5432/pma_production
DATABASE_HOST=your-db-host.com
DATABASE_PORT=5432
DATABASE_NAME=pma_production
DATABASE_USER=pma_prod_user
DATABASE_PASSWORD=your-very-secure-db-password

# Redis Configuration
REDIS_URL=redis://your-redis-host:6379
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png,.gif

# Logging Configuration
LOG_LEVEL=error
NEXT_PUBLIC_ENABLE_CONSOLE_LOGS=false

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_EXPORT=true
NEXT_PUBLIC_ENABLE_BULK_OPERATIONS=true

# Localization
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_SUPPORTED_LANGUAGES=en,ar
NEXT_PUBLIC_FALLBACK_LANGUAGE=en

# Theme Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_THEME_PERSISTENCE=true

# Performance Configuration
NEXT_PUBLIC_API_TIMEOUT=10000
NEXT_PUBLIC_DEBOUNCE_DELAY=300
NEXT_PUBLIC_PAGINATION_DEFAULT_LIMIT=20
NEXT_PUBLIC_PAGINATION_MAX_LIMIT=100

# Security Configuration
NEXT_PUBLIC_SESSION_TIMEOUT=1800000
NEXT_PUBLIC_CSRF_PROTECTION=true
NEXT_PUBLIC_RATE_LIMIT_REQUESTS=100
NEXT_PUBLIC_RATE_LIMIT_WINDOW=900000

# SMTP Configuration
SMTP_HOST=smtp.your-domain.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASSWORD=your-production-smtp-password
SMTP_FROM=PMA System <noreply@your-domain.com>

# Cloud Storage Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-production-access-key
AWS_SECRET_ACCESS_KEY=your-production-secret-key
AWS_S3_BUCKET=pma-production-documents

# Monitoring & Analytics
SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-production-mixpanel-token

# Development Tools (disabled in production)
NEXT_PUBLIC_ENABLE_DEVTOOLS=false
NEXT_PUBLIC_MOCK_DELAY_MIN=0
NEXT_PUBLIC_MOCK_DELAY_MAX=0

# SSL Configuration
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# CORS Configuration
CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com
CORS_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=100

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=pma-production-backups
