{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CorsSettings": {
    "AllowedOrigins": [ "http://localhost:5173", "http://localhost" ]
  },
  "Ollama": {
    "BaseUrl": "http://localhost:3000/api/chat/completions",
    "ApiKey": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6Ijk2ZmYzMzc4LThhYmEtNDYwMy04Y2QzLTAwNmM4MWJhMTg3YSIsImV4cCI6MTc2NjkyODE1OCwianRpIjoiMWE2ZjkyZDgtOTNkMi00OTFlLThiZDctMTdiMDk4ZWUwZjFjIn0.gzuDxdsja-yaqpWXbNk4YOOnX_LGruFEgWRQ2vl-LUo",
    "DefaultModel": "gemma3:4b",
    "Temperature": 0.5,
    "MaxTokens": 400
  },
  "N8n": {
    "AgentWebhookUrl": "http://localhost:5678/webhook/ai-suggest-agent"
  },
  "AttachmentSettings": {
    "MaxFileSize": 52428800,
    "AllowedExtensions": [ ".pdf", ".doc", ".docx", ".xls", ".xlsx", ".ppt", ".pptx", ".txt", ".jpg", ".jpeg", ".png", ".gif", ".bmp", ".zip", ".rar" ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=INETPC-4000;Database=PMA;Integrated Security=True;TrustServerCertificate=True;"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Seq"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning",
        "PMA.Api.Controllers": "Information"
      }
    },
    "Enrich": [
      "FromLogContext", 
      "WithMachineName", 
      "WithThreadId", 
      "WithProcessId",
      "WithEnvironmentName",
      "WithProcessName"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/app-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "shared": true,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:52247",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/errors-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90,
          "restrictedToMinimumLevel": "Error",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "shared": true,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Properties": {
      "Application": "PMA.Api",
      "Environment": "Production"
    }
  }
}