# Environment variables for Mock API Server
PORT=3001
NODE_ENV=development
API_PREFIX=/api

# CORS Settings
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Mock Data Settings
ENABLE_MOCK_DELAYS=true
MOCK_DELAY_MIN=100
MOCK_DELAY_MAX=500

# Database simulation
ENABLE_PERSISTENCE=false
PERSISTENCE_FILE=./data/mock-data.json
